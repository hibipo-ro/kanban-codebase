<!DOCTYPE html>
<html>
  <head>
    <title>KanbanCodebase</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <nav class="nav">
        <ul class="header_menu">
          <% if user_signed_in? %>
            <li class="nav-link"><%= current_user.name %></li>
          <% end %>
          <li class="header_menu_title"><%= link_to "kanban", class: "nav-link" %></li>
          <li>
            <ul class="header_menu_inner">
              <%# リストを作成するリンクは今後開発していくので、今は"#"にしておきます。 %>
              <li><%= link_to "リストを作成", "#", class: "nav-link listNew" %></li>
              <li><%= link_to "サインアウト", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
            </ul>
          </li>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
